<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <View
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="330dp"
            android:background="#000000"
            android:id="@+id/lineaHorizontal"
            android:layout_height="2dp"
            android:layout_width="fill_parent">
    </View>

    <View
            android:layout_marginEnd="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="400dp"
            android:background="#000000"
            android:layout_height="2dp"
            android:layout_width="fill_parent">
    </View>

    <View
            android:layout_marginBottom="200dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="150dp"
            android:background="#000000"
            android:layout_height="fill_parent"
            android:layout_width="2dp">
    </View>

    <View
            android:layout_marginBottom="200dp"
            android:layout_marginTop="200dp"
            android:layout_marginStart="260dp"
            android:background="#000000"
            android:layout_height="fill_parent"
            android:layout_width="2dp">
    </View>

    <GridLayout
            android:layout_marginStart="25dp"
            android:layout_gravity="center_vertical"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

        <Button
                android:id="@+id/button_01"
                android:background="#FFFFFF"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <Button
                android:id="@+id/button_02"
                android:background="#FFFFFF"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/button_03"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/button_04"
                android:background="#FFFFFF"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/button_05"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/button_06"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/button_07"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/button_08"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/button_09"
                android:background="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </GridLayout>

    <Button
            android:id="@+id/reiniciar"
            android:layout_gravity="bottom|center"
            android:text="@string/reinciar_juego"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


</FrameLayout>